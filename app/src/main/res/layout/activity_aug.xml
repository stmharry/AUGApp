<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/drawer_content_major"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/drawer_content_major_weight_closed">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/drawer_content_minor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/drawer_content_minor_weight_closed"
            android:background="@android:color/darker_gray">
            <!-- TODO -->

        </FrameLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="@dimen/drawer_list_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background">
    </ListView>

</android.support.v4.widget.DrawerLayout>
